        <td class="tic-tac-toe-box border-left" data-ttc-xy="1,2"></td>
      </tr>
      <tr>
        <td class="tic-tac-toe-box border-right border-top" data-ttc-xy="2,0"></td>
        <td class="tic-tac-toe-box border-top" data-ttc-xy="2,1"></td>
        <td class="tic-tac-toe-box border-left border-top" data-ttc-xy="2,2"></td>
      </tr>
    </table>

